@using renta_autos.Models
@{

                ViewBag.Title = "MostrarDetalle";
                List<Alquiler> detalles = ViewBag.datos != null ? ViewBag.datos : new List<Alquiler>();
}
<br />
<h2 style="color:darkslategrey; text-align:center;">Detalle de Alquiler</h2>

<table class="table table-bordered table-hover table-responsive">
    <thead class="table table-dark">
        <tr>
            <th>ID Alquiler</th>
            <th>Nombre Completo</th>
            <th>Telefono</th>
            <th>Dui</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Total a pagar</th>
            <th>Devolucion</th>
            <th>Descargar</th>
        </tr>
    </thead>
    <tbody>
        @if (detalles.Count() > 0)
        {
            foreach (var alq in detalles)
            {
                <tr>

                    <td>@alq.Cliente</td>
                    <td>@alq.Telefono</td>
                    <td>@alq.Dui</td>
                    <td>@alq.Fecha_inicio</td>
                    <td>@alq.Fecha_fin</td>
                    <td>@Math.Round(alq.Total, 2)</td>
                    <td>@Html.ActionLink("Devolver", "CreateUpdate", "Alquiler",new { Id_alquiler = alq.Id_alquiler}, new { @class= "btn btn-warning"})</td>
                    <td>@Html.ActionLink("PDF", "Imprimir", "Alquiler", new { Id_alquiler = alq.Id_alquiler }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">
                    <b>¡No hay datos que mostrar!</b>
                </td>
            </tr>
        }
    </tbody>

</table>